<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Your Profile"
        android:textColor="@color/white"
        android:textSize="30dp"
        ></TextView>

    <EditText

        android:id="@+id/modified_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify"
        android:hint="Modified name"/>


    <EditText
        android:id="@+id/modified_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modified Email"
        android:layout_below="@+id/modified_name"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modified_username"
        android:text="Save"/>
</RelativeLayout>